{
  "version": "1",
  "build": {
    "command": "npm run build",
    "outputDir": "dist"
  },
  "rewrites": [
    // 首先让静态资源正常加载
    {
      "source": "/assets/*",
      "destination": "/assets/*"
    },
    // 然后对其他请求进行重定向
    {
      "source": "/*",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ],
  "functions": {
    "edge_functions": {
      "enabled": true,
      "glob": "edge-functions/**/*.ts"
    },
    "routes": [
      {
        "path": "/api/translate",
        "function": "edge-functions/translate.ts"
      },
      {
        "path": "/api/word-query",
        "function": "edge-functions/word-query.ts"
      }
    ]
  },
  "environment": {
    "VOLCANO_API_KEY": "${VOLCANO_API_KEY}",
    "VOLCANO_API_URL": "${VOLCANO_API_URL}",
    "BAIDU_APP_ID": "${BAIDU_APP_ID}",
    "BAIDU_SECRET_KEY": "${BAIDU_SECRET_KEY}",
    "TENCENT_APP_ID": "${TENCENT_APP_ID}",
    "TENCENT_APP_KEY": "${TENCENT_APP_KEY}",
    "TENCENT_DICT_URL": "${TENCENT_DICT_URL}",
    "KV_URL": "${KV_URL}",
    "KV_REST_API_URL": "${KV_REST_API_URL}",
    "KV_REST_API_TOKEN": "${KV_REST_API_TOKEN}",
    "KV_REST_API_READ_ONLY_TOKEN": "${KV_REST_API_READ_ONLY_TOKEN}"
  }
}