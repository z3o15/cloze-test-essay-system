{
  "version": "1",
  "build": {
    "command": "npm run build",
    "outputDir": "dist"
  },
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/vite.svg",
      "destination": "/vite.svg"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/*",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    },
    {
      "source": "/assets/*.js",
      "headers": [{ "key": "Content-Type", "value": "application/javascript" }]
    },
    {
      "source": "/assets/*.css",
      "headers": [{ "key": "Content-Type", "value": "text/css" }]
    },
    {
      "source": "/assets/*.svg",
      "headers": [{ "key": "Content-Type", "value": "image/svg+xml" }]
    }
  ],
  "functions": {
    "edge_functions": {
      "enabled": true,
      "glob": "edge-functions/**/*.ts"
    },
    "routes": [
      { "path": "/api/translate", "function": "edge-functions/api/translate.ts" },
      { "path": "/api/word-query", "function": "edge-functions/word-query.ts" },
      { "path": "/api/visit-count", "function": "edge-functions/visit-counter.ts" }
    ]
  },
  "environment": {
    "TENCENT_SECRET_ID": "${TENCENT_SECRET_ID}",
    "TENCENT_SECRET_KEY": "${TENCENT_SECRET_KEY}",
    "TENCENT_REGION": "${TENCENT_REGION}",
    "TENCENT_PROJECT_ID": "${TENCENT_PROJECT_ID}",
    "KV_URL": "${KV_URL}",
    "KV_REST_API_URL": "${KV_REST_API_URL}",
    "KV_REST_API_TOKEN": "${KV_REST_API_TOKEN}",
    "KV_REST_API_READ_ONLY_TOKEN": "${KV_REST_API_READ_ONLY_TOKEN}",
    "API_BASE_URL": "${API_BASE_URL}"
  }
}
