# 服务器配置
PORT=8080
NODE_ENV=development

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cloze_test
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 翻译API配置
# 腾讯翻译API
TENCENT_APP_ID=your_tencent_app_id
TENCENT_APP_KEY=your_tencent_app_key
TENCENT_TRANSLATE_URL=https://api.ai.qq.com/fcgi-bin/nlp/nlp_texttranslate

# 火山AI API配置（用于单词难度判断）
VOLCANO_API_KEY=your_volcano_api_key_here
VOLCANO_API_URL=https://ark.cn-beijing.volces.com/api/v3/chat/completions
VOLCANO_MODEL=kimi-k2-250905
VOLCANO_DAILY_TOKEN_LIMIT=100000
VOLCANO_MAX_CONCURRENT=3

# 安全配置
JWT_SECRET=your_jwt_secret_here
API_RATE_LIMIT=100

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 缓存配置
CACHE_TTL_TRANSLATION=86400  # 24小时
CACHE_TTL_WORD=604800        # 7天
CACHE_TTL_SESSION=1800       # 30分钟